  <script type="text/javascript">
    // Function to calculate decimal places
    function CalculateDecimal(v, x) {
      var rvalue;
  
      if (isNaN(v)) {
        rvalue = NaN;
      } else {
        rvalue = parseFloat(v.toFixed(x));
      }
  
      return rvalue;
    }
  
    // Employee list
    var employeeList = [];
  
    // Function to initialize the employee list
    function initEmployeeList() {
      employeeList = [];
      showEmployeeList();
    }
  
    // Function to add an employee to the list
    function addEmployee() {
      var employee = {
        "name": document.getElementById("employee_name").value,
        "hourlyRate": document.getElementById("hourly_rate").value * 1,
        "hoursWorked": document.getElementById("hours_worked").value * 1,
        "deduction": document.getElementById("deduction").value * 1,
        "grossPay": function () {
          return this.hourlyRate * this.hoursWorked;
        },
        "netPay": function () {
          return this.grossPay() - this.deduction;
        }
      };
  
      employeeList.push(employee);
      showEmployeeList();
      clearInputFields();
    }
  
    // Function to delete an employee from the list
    function deleteEmployee() {
      var indexToDelete = document.getElementById("delitem").value * 1;
      if (indexToDelete && indexToDelete <= employeeList.length) {
        employeeList.splice(indexToDelete - 1, 1);
        showEmployeeList();
        clearInputFields();
      } else {
        alert("Invalid index to delete.");
      }
    }
  
    // Function to show the employee list
    function showEmployeeList() {
      var tbody = "";
      var totalNetPay = 0;
  
      for (var i = 0; i < employeeList.length; i++) {
        var ln = i + 1;
        var emp = employeeList[i];
  
        tbody += "<tr>" +
          '<td>' + ln + ' </td>' +
          '<td>' + emp.name + ' </td>' +
          '<td style="text-align:right">' + CalculateDecimal(emp.hoursWorked, 0) + '</td>' +
          '<td style="text-align:right">' + CalculateDecimal(emp.hourlyRate, 2) + '</td>' +
          '<td style="text-align:right">' + CalculateDecimal(emp.grossPay(), 2) + '</td>' +
          '<td style="text-align:right">' + CalculateDecimal(emp.deduction, 2) + '</td>' +
          '<td style="text-align:right">' + CalculateDecimal(emp.netPay(), 2) + '</td>' +
          "</tr>";
  
        totalNetPay += emp.netPay();
      }
  
      document.getElementById("tablebody").innerHTML = tbody;
      document.getElementById("items").value = employeeList.length;
      document.getElementById("totalamount").innerHTML = CalculateDecimal(totalNetPay, 2);
    }
  
    // Function to clear input fields
    function clearInputFields() {
      document.getElementById("employee_name").value = "";
      document.getElementById("hourly_rate").value = "";
      document.getElementById("hours_worked").value = "";
      document.getElementById("deduction").value = "";
    }
  
    // Event listeners
    document.getElementById("btnaddtolist").addEventListener("click", function () {
      // Use a simple confirmation dialog
      var confirmed = confirm("Add this employee to the list?");
      if (confirmed) {
        addEmployee();
      }
    });
  
    document.getElementById("btnclearlist").addEventListener("click", function () {
      // Use a simple confirmation dialog
      var confirmed = confirm("Clear the payroll list?");
      if (confirmed) {
        initEmployeeList();
      }
    });
  
    document.getElementById("btndelete").addEventListener("click", function () {
      var indexToDelete = document.getElementById("delitem").value;
      if (indexToDelete && indexToDelete <= employeeList.length) {
        // Use a simple confirmation dialog
        var confirmed = confirm("Delete this employee?");
        if (confirmed) {
          deleteEmployee();
        }
      } else {
        alert("Invalid index to delete.");
      }
    });
  </script>
